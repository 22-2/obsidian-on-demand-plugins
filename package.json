{
	"name": "on-demand-plugins",
	"type": "module",
	"version": "2.1.1",
	"description": "Lazy load plugins by caching their commands. Plugins are enabled on-demand when you trigger their commands (or open specific views), keeping startup fast.",
	"main": "main.js",
	"scripts": {
		"dev": "node esbuild.config.mjs",
		"test:e2e": "playwright test",
		"test:e2e:headed": "playwright test --headed",
		"test:e2e:install-browsers": "playwright install --with-deps",
		"build": "tsc -noEmit -skipLibCheck && pnpm run build:nocheck",
		"build:nocheck": "node esbuild.config.mjs production",
		"version": "node version-bump.mjs && git add manifest.json versions.json",
		"lint": "pnpm exec eslint . --ext .ts,.js,.mjs",
		"format": "pnpm exec prettier --editorconfig --write src"
	},
	"keywords": [],
	"author": "22-2",
	"license": "MIT",
	"pnpm": {
		"onlyBuiltDependencies": [
			"electron",
			"obsidian-e2e-toolkit"
		]
	},
	"dependencies": {
		"async-mutex": "^0.5.0",
		"loglevel": "^1.9.2",
		"monkey-around": "^3.0.0",
		"obsidian-typings": "^4.99.0",
		"p-event": "^7.1.0",
		"p-queue": "^9.1.0",
		"p-timeout": "^7.0.1",
		"p-wait-for": "^6.0.0",
		"store2": "^2.14.4"
	},
	"devDependencies": {
		"@eslint/js": "^10.0.1",
		"@playwright/test": "^1.58.2",
		"@types/node": "^25.2.3",
		"builtin-modules": "5.0.0",
		"esbuild": "0.27.3",
		"eslint": "^10.0.0",
		"eslint-config-prettier": "^10.1.8",
		"globals": "^17.3.0",
		"obsidian": "latest",
		"obsidian-e2e-toolkit": "github:22-2/obsidian-e2e-toolkit#0.1.7",
		"playwright": "^1.58.2",
		"prettier": "^3.8.1",
		"tslib": "2.8.1",
		"typescript": "5.9.3",
		"typescript-eslint": "^8.56.0"
	}
}
